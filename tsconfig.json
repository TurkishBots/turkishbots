{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "ES6",
		"moduleResolution": "node",
		"sourceMap": false,
		"removeComments": true,
		"lib": ["ES2021.String"],
		"outDir": "./bin",
		"skipLibCheck": true
	},
	"exclude": ["node_modules/*"],
	"include": ["src/**/*.ts"],
	"lib": ["es2015"]
}
